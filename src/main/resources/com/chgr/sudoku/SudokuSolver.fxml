<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import com.chgr.sudoku.models.Sudoku?>
<BorderPane xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chgr.sudoku.SudokuSolverController">
    <bottom>
        <HBox alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <Button mnemonicParsing="false" onAction="#bruteSolve" text="Brute Solve">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#logicalSolve" text="Logical Solve">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#clear" text="Clear">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <center>
        <Pane prefHeight="900.0" prefWidth="1400.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
            <VBox alignment="CENTER">
                <HBox alignment="CENTER">
                    <Sudoku fx:id="sudoku" />
                </HBox>
            </VBox>
        </Pane>
    </center>
</BorderPane>
